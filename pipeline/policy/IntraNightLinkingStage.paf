#<?cfg paf policy ?>
# Default TelescopeSimulatorStage policy file
# All angles in degrees,times in days.
databasePolicy: @policy/DataBase.paf
locationPolicy: @policy/Location.paf
verbosityLevel: "DEBUG"

maxV: 2.0               # max DIASource velocity (deg/day)
minObs: 2               # min DIASource per Tracklet
extended: 1             # use trail info?
maxT: 0.050             # max Tracklet time span within a night (days)
collapseArgs: "0.002 0.002 5.0 0.05"
#


